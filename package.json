{
  "name": "inco",
  "displayName": "Inco â€” Invisible Constraints",
  "description": "VSCode extension for Inco, a compile-time assertion engine for Go. Provides syntax highlighting, diagnostics, commands, and snippets for @inco: directives.",
  "version": "0.0.5",
  "publisher": "imnive-design",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imnive-design/inco"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "go",
    "golang",
    "inco",
    "contracts",
    "assertions",
    "compile-time"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "workspaceContains:**/*.inco.go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inco.gen",
        "title": "Inco: Generate Overlay",
        "icon": "$(play)"
      },
      {
        "command": "inco.build",
        "title": "Inco: Build"
      },
      {
        "command": "inco.test",
        "title": "Inco: Test"
      },
      {
        "command": "inco.run",
        "title": "Inco: Run"
      },
      {
        "command": "inco.audit",
        "title": "Inco: Audit (Contract Coverage)"
      },
      {
        "command": "inco.release",
        "title": "Inco: Release (Bake Guards)"
      },
      {
        "command": "inco.releaseClean",
        "title": "Inco: Release Clean (Revert)"
      },
      {
        "command": "inco.clean",
        "title": "Inco: Clean Cache"
      },
      {
        "command": "inco.checkBuild",
        "title": "Inco: Check Build Errors (Debug)"
      },
      {
        "command": "inco.preview",
        "title": "Inco: Preview Generated Guard",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "inco.preview",
          "when": "resourceExtname == .go",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Inco",
      "properties": {
        "inco.executablePath": {
          "type": "string",
          "default": "inco",
          "description": "Path to the inco binary. Defaults to 'inco' (found via PATH)."
        },
        "inco.autoGen": {
          "type": "boolean",
          "default": true,
          "description": "Automatically run 'inco gen' on save in .inco.go files."
        },
        "inco.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable error diagnostics for invalid @inco: directives."
        },
        "inco.buildCheck": {
          "type": "boolean",
          "default": true,
          "description": "Run 'go build -overlay' after gen to catch compile errors in @inco: expressions. Acts as a fallback when gopls doesn't fully support -overlay."
        }
      }
    },
    "languages": [],
    "grammars": [
      {
        "scopeName": "comment.inco.injection",
        "path": "./syntaxes/inco-injection.tmLanguage.json",
        "injectTo": [
          "source.go"
        ]
      }
    ],
    "configurationDefaults": {
      "files.associations": {
        "*.inco.go": "go"
      }
    },
    "snippets": [
      {
        "language": "go",
        "path": "./snippets/inco.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src/",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^10.0.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  }
}
