{
  "name": "incogno",
  "displayName": "inco - incognito assertions for Go",
  "description": "VSCode extension for inco, a compile-time assertion engine for Go. Provides syntax highlighting, diagnostics, commands, and snippets for @inco: directives.",
  "version": "0.1.3",
  "publisher": "incogno-design",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/incogno-design/inco-extension"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "go",
    "golang",
    "inco",
    "contracts",
    "assertions",
    "compile-time"
  ],
  "icon": "images/icon.jpg",
  "activationEvents": [
    "onLanguage:go",
    "workspaceContains:**/*.inco.go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "inco.gen",
        "title": "inco: Generate Overlay",
        "icon": "$(play)"
      },
      {
        "command": "inco.build",
        "title": "inco: Build"
      },
      {
        "command": "inco.test",
        "title": "inco: Test"
      },
      {
        "command": "inco.run",
        "title": "inco: Run"
      },
      {
        "command": "inco.audit",
        "title": "inco: Audit (Contract Coverage)",
        "icon": "$(refresh)"
      },
      {
        "command": "inco.release",
        "title": "inco: Release (Bake Guards)"
      },
      {
        "command": "inco.releaseClean",
        "title": "inco: Release Clean (Revert)"
      },
      {
        "command": "inco.clean",
        "title": "inco: Clean Cache"
      },
      {
        "command": "inco.checkBuild",
        "title": "inco: Check Build Errors (Debug)"
      },
      {
        "command": "inco.preview",
        "title": "inco: Preview Generated Guard",
        "icon": "$(open-preview)"
      },
      {
        "command": "inco.fmt",
        "title": "inco: Format (inco fmt)",
        "icon": "$(symbol-ruler)"
      },
      {
        "command": "inco.watchStart",
        "title": "inco: Start Watch"
      },
      {
        "command": "inco.watchStop",
        "title": "inco: Stop Watch"
      },
      {
        "command": "inco.watchRestart",
        "title": "inco: Restart Watch"
      },
      {
        "command": "inco.toggleFoldDirectives",
        "title": "inco: Toggle Fold Directives",
        "icon": "$(fold)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "inco.preview",
          "when": "resourceExtname == .go || resourceExtname == .inco",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "inco.audit",
          "when": "view == inco.auditPanel",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "inco",
      "properties": {
        "inco.executablePath": {
          "type": "string",
          "default": "inco",
          "description": "Path to the inco binary. Defaults to 'inco' (found via PATH)."
        },
        "inco.watch.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start 'inco watch' on activation for incremental overlay generation. Replaces the old auto-gen-on-save approach."
        },
        "inco.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable error diagnostics for invalid @inco: directives."
        },
        "inco.buildCheck": {
          "type": "boolean",
          "default": true,
          "description": "Run 'go build -overlay' after gen to catch compile errors in @inco: expressions. Acts as a fallback when gopls doesn't fully support -overlay."
        },
        "inco.highlight.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable syntax highlighting for @inco: directives (keyword and action colors)."
        }
      }
    },
    "views": {
      "panel": [
        {
          "type": "webview",
          "id": "inco.auditPanel",
          "name": "inco Audit"
        }
      ]
    },
    "languages": [],
    "grammars": [
      {
        "scopeName": "comment.inco.injection",
        "path": "./syntaxes/inco-injection.tmLanguage.json",
        "injectTo": [
          "source.go"
        ]
      }
    ],
    "configurationDefaults": {},
    "snippets": [
      {
        "language": "go",
        "path": "./snippets/inco.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src/",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.0.0",
    "eslint": "^10.0.1",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0"
  }
}
