{
  "Inco: assert (panic default)": {
    "prefix": "inco",
    "body": "// @inco: ${1:expr}",
    "description": "Inco directive with default panic action"
  },
  "Inco: assert panic": {
    "prefix": "incopanic",
    "body": "// @inco: ${1:expr}, -panic(\"${2:message}\")",
    "description": "Inco directive with custom panic message"
  },
  "Inco: assert return": {
    "prefix": "incoreturn",
    "body": "// @inco: ${1:expr}, -return(${2:values})",
    "description": "Inco directive with return action"
  },
  "Inco: assert continue": {
    "prefix": "incocontinue",
    "body": "// @inco: ${1:expr}, -continue",
    "description": "Inco directive with continue action"
  },
  "Inco: assert break": {
    "prefix": "incobreak",
    "body": "// @inco: ${1:expr}, -break",
    "description": "Inco directive with break action"
  },
  "Inco: assert log": {
    "prefix": "incolog",
    "body": "// @inco: ${1:expr}, -log(\"${2:message}\")",
    "description": "Inco directive with log action"
  },
  "Inco: nil check": {
    "prefix": "inconil",
    "body": "// @inco: ${1:ptr} != nil",
    "description": "Inco nil pointer check"
  },
  "Inco: error check (inline)": {
    "prefix": "incoerr",
    "body": "_ = ${1:err} // @inco: ${1:err} == nil, -panic(${1:err})",
    "description": "Inco inline error assertion"
  },
  "Inco: positive value": {
    "prefix": "incopos",
    "body": "// @inco: ${1:x} > 0, -panic(\"${1:x} must be positive\")",
    "description": "Inco positive value assertion"
  },
  "Inco: bounds check": {
    "prefix": "incobounds",
    "body": "// @inco: ${1:i} < len(${2:slice})",
    "description": "Inco bounds check assertion"
  },
  "Inco: non-empty string": {
    "prefix": "incolen",
    "body": "// @inco: len(${1:s}) > 0, -return(${2:zero, fmt.Errorf(\"empty\")})",
    "description": "Inco non-empty string check"
  },
  "Inco: @if conditional": {
    "prefix": "incoif",
    "body": "// @if: ${1:condition}",
    "description": "Inco @if conditional directive â€” wraps next statement in if block"
  },
  "Inco: @if with log": {
    "prefix": "incoiflog",
    "body": "// @if: ${1:condition}, -log(\"${2:message}\")",
    "description": "Inco @if directive with log action"
  },
  "Inco: @if nil check": {
    "prefix": "incoifnil",
    "body": "// @if: ${1:ptr} != nil",
    "description": "Inco @if nil pointer conditional"
  },
  "Inco: @if error check": {
    "prefix": "incoiferr",
    "body": "// @if: ${1:err} != nil",
    "description": "Inco @if error conditional"
  }
}
